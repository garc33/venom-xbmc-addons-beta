		<animation effect="fade" time="250" condition="Window.Next(Home)">WindowClose</animation>
		<include condition="Skin.HasSetting(transphome.enabled)">transparency</include>
		<visible>Skin.HasSetting(Floor2)</visible>
		</control>
		<control type="image">
		<posx>0</posx>
		<posy>100r</posy>
